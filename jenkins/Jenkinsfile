pipeline {
    agent any
    tools { 
        maven 'Maven_3.6.3' 
        jdk 'jdk8' 
    }
    stages {
        stage('Clean') {
            steps {
                mvn -B clean
            }
        }
        stage('CompileSourceCode') {
            steps {
                mvn -B compiler:compile
            }
        }
         stage('CompileTestCode') {
            steps {
                mvn -B compiler:testCompile
            }
        }
        stage('Build') {
            steps {
                mvn -B -DskipTests package
            }
        }
        stage('Test') {
            steps {
                mvn -B test
            }
            post {
                always {
                    junit 'target/surefire-reports/*.xml'
                }
            }
        }
        stage('Deliver') {
            steps {
                sh './jenkins/scripts/deliver.sh'
            }
        }
    }
}
